---
import projects from '../../data/projects.json'
console.log(projects)
---

<section class="mt-20">

    <h3 class="font-bold text-5xl my-4">Projects</h3>
    
    <div class="pt-10 flex flex-col gap-4">
        {
            projects.map( project =>(

            <div class="flex bg-gray-900 rounded-xl text-center md:text-left p-5">
                <div class="flex-1">
                    <h4 class="font-bold text-2xl mb-4">
                        {project.title}
                    </h4>
                    <p class="mb-4">
                        {project.description}
                    </p>
                    <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-700">
                        View project
                    </button>
                </div>
                <div class="flex-1">
                    <img class="w-72 m-auto" src={project.image} alt='' loading='lazy' decoding='async' />
                </div>
            </div>

            ))
        }
    </div>
</section>